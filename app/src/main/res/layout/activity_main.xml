<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="65dp"
        android:text="勝敗"
        app:layout_constraintStart_toStartOf="@+id/cpu"
        app:layout_constraintTop_toBottomOf="@+id/cpu" />

    <TextView
        android:id="@+id/cpu"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="175dp"
        android:text="cpu"
        app:layout_constraintStart_toStartOf="@+id/Player"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/Player"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="7dp"
        android:layout_marginTop="94dp"
        android:layout_marginBottom="81dp"
        android:text="Player"
        app:layout_constraintBottom_toBottomOf="@+id/cpu"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/paaButton"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/background_circle"
        android:text="パー"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/chokiButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/chokiButton"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/background_circle"
        android:text="チョキ"
        app:layout_constraintBottom_toBottomOf="@+id/paaButton"
        app:layout_constraintEnd_toStartOf="@+id/paaButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/gooButton"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/gooButton"
        android:layout_width="50dp"
        android:layout_height="0dp"
        android:background="@drawable/background_circle"
        android:text="グー"
        app:layout_constraintBottom_toBottomOf="@+id/chokiButton"
        app:layout_constraintEnd_toStartOf="@+id/chokiButton"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>